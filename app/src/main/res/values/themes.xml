<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Projemanag" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>

        <item name="colorPrimary">@color/darkSecondary</item>

    </style>

    <style name="Theme.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlActivated">@color/lightPrimary</item>
    </style>


    <style name="AppThemeInput" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorControlNormal">@color/textColorSecondary</item>
        <item name="colorControlActivated">@color/lightPrimary</item>

    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">

        <item name="colorAccent">@color/darkPrimary</item>
        <!--selected Item color-->
        <item name="colorControlActivated">@color/lightPrimary</item>
        <!-- arrow bordercolor(<>)-->
        <item name="android:selectableItemBackgroundBorderless">@color/lightestGrey</item>
        <!-- Highlight item color-->
        <item name="colorControlHighlight">@color/lightPrimary</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Ok Cancel Color-->
        <item name="colorOnPrimary">@color/darkPrimary</item>
        <!--30 days of month-->
        <item name="android:textColor">@color/black</item>
        <!-- Week TextColor-->
        <item name="android:textColorSecondary">@color/lightPrimary</item>
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/black</item>
        <!--day , month-->
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <!-- year-->
        <item name="android:textColorSecondaryInverse">@color/white</item>

    </style>
</resources>